#content-below.wrapper
    .container
        .row-fluid
            .upsell
                small.muted Our budget templates are FREE and easy to use!
                = ' '
                a.btn.btn-warning(href="/templates")
                    i.icon-download-alt  Download FREE budget templates

#footer
    .container
        .row
            .span8.col
                .block
                    h3 About Us
                    p.
                      Our mission is to provide FREE, valuable and helpful information concerning zero based budgets to as
                      many people as possible.
            .span4.col
                .block.contact-block
                    h3 Contact Us
                    address
                        p
                            abbr(title="Email"): i.icon-envelope
                            = email
        .row-fluid
            #toplink
                a.top-link(href="#top", title="Back to top")
                    = 'Back To Top '
                    i.icon-chevron-up
            .subfooter
                .span6
                    p 
                        Copyright #{new Date().getFullYear()} &copy; 
                        a(href="http://www.saoirsemedia.com") #{author}
                .span6
                    ul.inline.pull-right
                        li: a(href="/") Home
                        li: a(href="/articles") Articles
                        li: a(href="/templates") Budget Templates
                        li: a(href="/about") About

